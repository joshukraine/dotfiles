    "deny": [
      "Bash(bin/rails db:drop:*)",
      "Bash(bin/rails db:reset:*)",
      "Bash(bundle exec rails db:drop:*)",
      "Bash(bundle exec rails db:reset:*)",
      "Bash(rails db:drop:*)",
      "Bash(rails db:reset:*)"
    ]
  }
