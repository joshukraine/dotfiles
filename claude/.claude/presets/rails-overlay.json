{
  "permissions": {
    "allow": [
      "Bash(ruby:*)",
      "Bash(rails:*)",
      "Bash(bundle:*)",
      "Bash(gem:*)",

      "Bash(bin/rails:*)",
      "Bash(bin/rake:*)",
      "Bash(bin/dev:*)",
      "Bash(bin/ci:*)",
      "Bash(bin/rubocop:*)",
      "Bash(bin/standardrb:*)",
      "Bash(bin/brakeman:*)",
      "Bash(bin/bundler-audit:*)",
      "Bash(bin/importmap:*)",

      "Bash(standardrb:*)",

      "WebFetch(domain:api.rubyonrails.org)",
      "WebFetch(domain:guides.rubyonrails.org)",
      "WebFetch(domain:ruby-doc.org)",
      "WebFetch(domain:rubygems.org)",
      "WebFetch(domain:tailwindcss.com)"
