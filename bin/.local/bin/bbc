#!/usr/bin/env bash
#
# Homebrew bundle cleanup (dry-run)
# Usage: bbc

set -euo pipefail

if [[ -e "$HOME/Brewfile" ]]; then
  echo "-> Running bundle cleanup dry-run for Brewfile located at $HOME/Brewfile"
  sleep 2
  brew bundle cleanup --file "$HOME/Brewfile"
else
  echo "Brewfile not found."
  exit 1
fi
