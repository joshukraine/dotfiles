#!/usr/bin/env bash
#
# Smart git wrapper - shows status if no args, otherwise runs git command
# Usage: g [git-args...]

if [[ $# -eq 0 ]]; then
  # Clear terminal if possible, but don't fail in CI environments
  if [[ -n "$TERM" ]]; then
    clear
  fi
  git status --short --branch && echo
else
  git "$@"
fi